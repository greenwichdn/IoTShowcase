PROGMEM const unsigned char* const bitmap_array[] = {
DILUI, DITHANG, RETRAI, REPHAI};

GOFi2cOLED GOFoled;

String sData = ""; //Tạo String Data trống
char cData; //Tạo Char Data để nhận từng byte dữ liệu vào
void setup() {
  GOFoled.init(0x3C); // Setup hiển thị OLED với địa chỉ 0x3C
  GOFoled.display();  // Hiền thị màn hình mặc định của thư viện GOFoled
  Serial.begin(9600);
  GOFoled.clearDisplay();  //Xoá hiển thị trên màn hình
}
void loop() {
  while (Serial.available()){  
  cData = Serial.read(); // tiến hành đọc
  delay(100);
  sData += cData; // Tạo chuỗi String Data từng ký tự char Data nhập vào
  }
 
  //Tính các giá trị Hướng đi và Vị Trí + Vẽ hình
  if(sData.length() > 0){
    Serial.println(sData);
    String iPosSub = sData.substring(0,1); //Chia chuỗi String Data thành String riêng biệt bắt đầu từ ký tự 0 cho đến 1
    int iPos = iPosSub.toInt(); //Ép kiểu giá trị từ String sang Int
    String iDis = sData.substring(2, sData.length()); //Chia chuỗi String Data thành String riêng biệt
    Serial.println(iPos);
    Serial.println(iDis);
    GOFoled.clearDisplay();
    GOFoled.drawBitmap(0,2, (const unsigned char*)pgm_read_word(&(bitmap_array[iPos])), 24, 60, WHITE); //In ra màn hình OLED hình ảnh
    GOFoled.setTextSize(2);
    GOFoled.setTextColor(WHITE);
    GOFoled.setCursor(45,20); // Toạ độ
    GOFoled.println(iDis); // In ra màn hình OLED nội dung
    GOFoled.display();
    delay(3000);
    sData = ""; //Trả lại giá trị sData rỗng để không bị lập vô hạn
  }
}
